<style>
    .fixed-size{
        width: 60px;
        height: 60px;
        font-size: 25px;
    }

    body{
        background-color: black;
    }
</style>

<div class="text-center text-light">
    <h1 class="display-4">Calculator</h1>
</div>

<div class="container d-flex justify-content-center">
    <div class="d-flex flex-column justify-content-center">
        <p class="text-danger" id="errorMessage"></p>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="0" id="expression" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button class="btn btn-outline-light" onclick="evaluateExpression()" type="button">Calculate</button>
            </div>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <button class="btn btn-outline-danger btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="clearExpression()">AC</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('(')">(</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression(')')">)</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('^')">^</button>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1  fixed-size" onclick="addToExpression('7')">7</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1  fixed-size" onclick="addToExpression('8')">8</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1  fixed-size" onclick="addToExpression('9')">9</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('/')">&divide;</button>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('4')">4</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('5')">5</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('6')">6</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('*')">&times;</button>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('1')">1</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('2')">2</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('3')">3</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('-')">-</button>
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('.')">.</button>
            <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('0')">0</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="removeLastCharacter()">&larr;</button>
            <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" onclick="addToExpression('+')">+</button>
        </div>
        <a href="@Url.Action("Index", "NoJavascript")" class="btn btn-outline-secondary">Calculator without javascript</a>
    </div>
</div>

