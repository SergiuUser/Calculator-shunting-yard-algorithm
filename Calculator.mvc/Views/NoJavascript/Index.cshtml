@model Calculator.mvc.Models.InputModel

<style>
    .fixed-size {
        width: 60px;
        height: 60px;
        font-size: 25px;
    }

    body {
        background-color: black;
    }
</style>

<div class="text-center text-light">
    <h1 class="display-4">Calculator</h1>
</div>

<div class="container d-flex justify-content-center">
    <div class="d-flex flex-column justify-content-center">
        @{
            if (Model.errorMessage != null){
                 <p class="text-danger">@Model.errorMessage</p>
            }
        }
        <form method="post" action="/NoJavaScript/AddToExpression">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="0" name="expression" aria-describedby="basic-addon2" value="@Model.expression">
            <div class="input-group-append">
                <button class="btn btn-outline-light" type="submit" name="calculate" value="true">Calculate</button>
            </div>
        </div>
            <div class="d-flex flex-wrap justify-content-center">
                <button class="btn btn-outline-danger btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="clear" value="true">AC</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="(">(</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type = "submit" name="value" value=")">)</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type = "submit" name="value" value="^">^</button>
            </div>
            <div class="d-flex flex-wrap justify-content-center">
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1  fixed-size" type="submit" name="value" value="7">7</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1  fixed-size" type="submit" name="value" value="8">8</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1  fixed-size" type="submit" name="value" value="9">9</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="/">&divide;</button>
            </div>
            <div class="d-flex flex-wrap justify-content-center">
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="4">4</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="5">5</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="6">6</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="*">&times;</button>
            </div>
            <div class="d-flex flex-wrap justify-content-center">
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="1">1</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="2">2</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="3">3</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="-">-</button>
            </div>
            <div class="d-flex flex-wrap justify-content-center">
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value=".">.</button>
                <button class="btn btn-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="0">0</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="remove" value="true">&larr;</button>
                <button class="btn btn-outline-light btn-lg mx-1 my-1 flex-grow-1 fixed-size" type="submit" name="value" value="+">+</button>
            </div>
        </form>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Calculator with javascript</a>
    </div>
</div>